<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/whiteback">

        <ImageView
            android:id="@+id/image_of_chest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/limf" />

        <TextView
            android:id="@+id/localization_additional_mammary_glands"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:text="Локализация добавочных молочных желёз"
            android:textSize="30sp"/>

        <CheckBox
            android:id="@+id/glandCenter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-74dp"
            android:layout_toStartOf="@+id/glandRightDown"
            android:button="@drawable/check_dobav" />

        <CheckBox
            android:id="@+id/glandRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="288dp"
            android:layout_marginEnd="47dp"
            android:layout_toStartOf="@+id/glandRightDown"
            android:button="@drawable/check_dobav" />

        <CheckBox
            android:id="@+id/glandRightDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/glandLeftDown"
            android:layout_marginStart="77dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/glandLeftDown"
            android:button="@drawable/check_dobav" />

        <CheckBox
            android:id="@+id/glandLeftDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/glandLeft"
            android:layout_alignParentStart="true"
            android:layout_marginStart="91dp"
            android:button="@drawable/check_dobav" />

        <CheckBox
            android:id="@+id/glandLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="281dp"
            android:button="@drawable/check_dobav" />

        <Button
            android:id="@+id/fuzzy_rough"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="21dp"
            android:background="@color/colorPrimary"
            android:text="OK"
            android:textColor="#000000" />


    </RelativeLayout>

</ScrollView>